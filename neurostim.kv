<HomeButton@Button>
    font_size: 20
    color: .1,.5,.6,1
    size_hint: 0.2, 0.15
    text: "HOME"
    pos_hint: {"x":0, "top":1}
    background_color: 0.1,0.2,0.3,1
    on_press: app.root.current = 'home'

<NewDeviceButton@Button>
    font_size: 20
    color: .1,.5,.6,1
    size_hint: 0.2, 0.15
    text: "New Device"
    pos_hint: {"x":0, "bottom":1}
    background_color: 0.2,0.5,0.3,1
    on_press: app.root.current = 'device'

<BeginnerTutorial@Button>:
    font_size: 20
    color: .1,.5,.6,1
    text: "Beginner Tutorial"
    background_color: 0.2,0.5,0.3,1
    size_hint: 0.3, 0.2
    pos_hint: {"x":0.65, "top":0.95}

<GetHelp@Button>:
    font_size: 20
    color: .1,.5,.6,1
    text: "Get Help"
    background_color: 0.2,0.5,0.3,1
    size_hint: 0.3, 0.2
    pos_hint: {"x":0.65, "top":0.45}

<LatestUpdate@Button>:
    font_size: 20
    color: .1,.5,.6,1
    text: "Latest Update"
    background_color: 0.2,0.5,0.3,1
    size_hint: 0.25, 0.2
    pos_hint: {"x":0.3, "top":0.95}

<HomeLayout@FloatLayout>:
    HomeButton:
    NewDeviceButton:
    BeginnerTutorial:
    GetHelp:
    LatestUpdate:

<HomeScreen>:
    name: "home"
    HomeLayout:

<DeviceChannelTabs>:
    size_hint: 1,1
    pos_hint: {"x":0, "top":1}
    do_default_tab: False
    TabbedPanelItem:
        text: "Channel 1"
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                PhaseTimeFrequencyTabs:
                BurstUniformStimulationTabs:
            FloatLayout:
                Button:
                    size_hint: .4,.1
                    pos_hint: {"x":0.075, "top":1}
                    text: "Stop"
                Button:
                    size_hint: .4,.1
                    pos_hint: {"x":0.525, "top":1}
                    text: "Start"
    TabbedPanelItem:
        text: "Channel 2"
        BoxLayout:
            orientation: 'vertical'
            PhaseTimeFrequencyTabs:
            BurstUniformStimulationTabs:


<PhaseTimeFrequencyTabs>:
    tab_width: (self.parent.width*.995)/2
    size_hint: .995,1
    pos_hint: {"x":0, "top":1}
    do_default_tab: False
    color: .2,.2,.1,1
    background_color: 0.1,0.2,0.3,1
    TabbedPanelItem:
        text: "Phase Time"
    TabbedPanelItem:
        text: "Frequency"

<BurstUniformStimulationTabs>:
    tab_width: (self.parent.width*.995)/2
    size_hint: .995,1
    pos_hint: {"x":0, "top":1}
    do_default_tab: False
    color: .2,.2,.1,1
    background_color: 0.1,0.2,0.3,1
    TabbedPanelItem:
        text: "Burst Stimulation"
    TabbedPanelItem:
        text: "Uniform Stimulation"

<DeviceTabs>:
    size_hint: .8,1
    pos_hint: {"x":.2, "top":1}
    do_default_tab: False
    tab_width: (self.parent.width*.8)/4
    TabbedPanelItem:
        text: "Stimulation Setting"
        DeviceChannelTabs:
    TabbedPanelItem:
        text: "Stimulation Log"
    TabbedPanelItem:
        text: "EEG recording"
    TabbedPanelItem:
        text: "Advanced Settings"

<DeviceLayout@FloatLayout>:
    HomeButton:
    NewDeviceButton:
    DeviceTabs:

<DeviceScreen>:
    name: "device"
    DeviceLayout:

ScreenManagement:
    HomeScreen:
    DeviceScreen: