<TerminationTabs>:
    tab_width: (self.parent.width*.85)/3
    pos_hint: {"x":0.075, "top":.45}
    size_hint: .85,.25
    do_default_tab: False
    stimulation_duration:stimulation_duration
    number_of_burst:number_of_burst
    TabbedPanelItem:
        text: "Stimulation duration (s)"
        text_size: self.size
        group: "termination"
        background_color:.69,.77,.87,.3
        color:.1,.1,.1,1
        FloatLayout:
            Label:
                pos_hint: {"x":0, "top":.99}
                size_hint: 1,.3
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text: " Stimulation duration (s)"
            TextInput:
                id: stimulation_duration
                pos_hint: {"x":0, "top":.69}
                size_hint: 1,.69
                text: "0"
                hint_text: "0"
                multiline:False
                font_size: self.height*0.55
                input_type: 'number'
                input_filter: 'float'
                multiline: False
    TabbedPanelItem:
        text: "Number \nof burst"
        group: "termination"
        text_size: self.size
        background_color:.69,.77,.87,.3
        color: .1,.1,.1,1
        FloatLayout:
            Label:
                pos_hint: {"x":0, "top":.99}
                size_hint: 1,.3
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text: " Number of burst"
            TextInput:
                id: number_of_burst
                pos_hint: {"x":0, "top":.69}
                size_hint: 1,.69
                text: "0"
                hint_text: "0"
                font_size: self.height*0.55
                input_type: 'number'
                input_filter: 'float'
                multiline: False
    TabbedPanelItem:
        text: "Stimulate \nforever"
        group: "termination"
        text_size: self.size
        background_color:.69,.77,.87,.3
        color: .1,.1,.1,1


